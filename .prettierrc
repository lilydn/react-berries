{
  "singleQuote": true,
  "printWidth": 80,
  "bracketSpacing": true,
  "trailingComma": "es5",
  "tabWidth": 2,
  "jsxSingleQuote": false,
  "arrowParens": "always",
  "importOrder": ["^(^react$|@react|react)", "<THIRD_PARTY_MODULES>", "^@/(.*)$", "^~(.*)$", "^#(.*)$", "^[./]"],
  "importOrderSeparation": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "overrides": [
    {
      "files": ["**/*.css", "**/*.scss", "**/*.html"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
